<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ************************ Tchap items ************************ -->

    <style name="TchapLoginButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tchap_text_color_light</item>
    </style>

    <style name="TchapTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13.5sp</item>
        <item name="android:textColor">@color/tchap_text_color_light</item>
        <item name="android:textColorHint">@color/tchap_text_color_light</item>
        <item name="colorAccent">@color/tchap_text_color_light</item>
    </style>

    <!-- actionbar icons color -->
    <style name="Vector.ActionBarTheme.TchapLogin" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/tchap_text_color_light</item>
        <item name="actionMenuTextColor">@color/tchap_text_color_light_selector</item>
        <item name="android:actionMenuTextColor">@color/tchap_text_color_light_selector</item>
        <item name="android:textSize">13.5sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TchapSearchView" parent="@style/VectorSearchView">
        <item name="android:textSize">14sp</item>
        <item name="closeIcon">@drawable/ic_tchap_clear_search</item>
        <item name="defaultQueryHint">@string/search</item>
        <item name="searchHintIcon">@drawable/ic_tchap_search_input</item>
        <item name="searchIcon">@drawable/ic_tchap_search_input</item>
    </style>

    <style name="TchapSearchView.Toolbar">
        <item name="android:background">@drawable/bg_tchap_bar_search_field</item>
        <item name="android:theme">@style/AppTheme.Toolbar.SearchView</item>
    </style>

    <style name="AppTheme.Toolbar.SearchView" parent="AppTheme.Light">
        <item name="android:colorControlActivated">?bar_title_color</item>
        <item name="android:textColorPrimary">?bar_title_color</item>
        <item name="android:textColorHint">?bar_hint_color</item>
        <item name="android:tint">?bar_hint_color</item>
    </style>

</resources>
