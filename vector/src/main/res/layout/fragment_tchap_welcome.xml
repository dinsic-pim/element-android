<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_tchap_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/Widget.Vector.TextView.Title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/start_message"
        android:textColor="?colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <View
        android:id="@+id/fragment_tchap_welcome_separator"
        android:layout_width="1dp"
        android:layout_height="87dp"
        android:layout_marginBottom="26dp"
        android:background="?colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loginSplashSubmit"
        style="@style/Widget.Vector.Button.Text.Login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/tchap_has_account_no"
        android:textColor="?colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="@id/fragment_tchap_welcome_separator"
        app:layout_constraintEnd_toEndOf="@id/fragment_tchap_welcome_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_tchap_welcome_separator" />

    <Button
        android:id="@+id/loginSplashAlreadyHaveAccount"
        style="@style/Widget.Vector.Button.Text.Login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/tchap_has_account_yes"
        android:textColor="?colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="@id/fragment_tchap_welcome_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/fragment_tchap_welcome_separator"
        app:layout_constraintTop_toTopOf="@id/fragment_tchap_welcome_separator" />

    <TextView
        android:id="@+id/loginSplashVersion"
        style="@style/Widget.Vector.TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:textColor="?vctr_content_secondary"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_debug_icon"
        app:drawableTint="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/settings_version"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
