<?xml version="1.0" encoding="utf-8"?>
<!-- The android:opacity=”opaque” line — this is critical in preventing a flash of black as your theme transitions. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <!-- Background image -->
    <item>
        <bitmap android:src="@drawable/bg_tchap_splashscreen" />
    </item>

    <!-- Centered logo -->
    <item
        android:bottom="300dp"
        android:drawable="@drawable/ic_tchap_splashscreen_logo"
        android:gravity="center" />

    <!-- Centered title -->
    <item
        android:bottom="120dp"
        android:drawable="@drawable/ic_tchap_title"
        android:gravity="center" />

    <!-- Centered description -->
    <item
        android:bottom="40dp"
        android:drawable="@drawable/ic_tchap_splashscreen_desc"
        android:gravity="center" />

    <!-- Bottom icon -->
    <item
        android:bottom="90dp"
        android:drawable="@drawable/ic_tchap_rf"
        android:gravity="bottom|center" />

</layer-list>